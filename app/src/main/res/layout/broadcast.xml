<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stopBroadcast"
        android:id="@+id/stop_service"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startBroadcast"
        android:id="@+id/start_service"
        android:layout_above="@+id/stop_service"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/channel"
        android:layout_above="@+id/stop_service"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/start_service"
        android:layout_toStartOf="@+id/start_service"
        android:inputType="textAutoComplete"
        android:hint="@string/channel_name_string"
        android:editable="false" />
</RelativeLayout>